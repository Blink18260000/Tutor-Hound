<div>
  <h1>Log In</h1>

  <%= render "shared/errors" %>

  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <label for="user[user_name]">User Name:</label>
    <input type="text" name="user[user_name]" value="<%= @user.user_name %>"><br/>

    <label for="user[password]">Password:</label>
    <input type="password" name="user[password]" value=""><br/>
    <input type="submit" value="Log In">
  </form>

  <p>Not signed up? <a href="/users/new">Sign up!</a></p>
  <p>Just want to browse around? <a href="/users/guest">Log in as guest!</a></p>
</div>
