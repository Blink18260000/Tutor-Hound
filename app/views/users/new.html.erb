<div>
  <h1>Sign Up</h1>

  <%= render "shared/errors" %>

  <form action="<%= users_url %>" method="post">
    <%= auth_token %>

    <label for="user[user_name]">User Name:</label>
    <input type="text" name="user[user_name]" value="<%= @user.user_name %>"><br/>

    <label for="user[password]">Password:</label>
    <input type="password" name="user[password]" value=""><br/>

    <label for="user[phone_number]">Primary Phone Number:</label>
    <input type="text" name="user[phone_number]" value=""><br/>

    <label for="user[address]">Address:</label>
    <input type="text" name="user[address]" value=""><br/>

    <label for="user[region_id]">City:</label>
    <select name="user[region_id]">
      <option value=1>Atlanta</option>
      <option value=3>New York</option>
      <option value=2>San Francisco</option>
      <option value=4>Seattle</option>
    <select>
    <br/>

    <input type="submit" value="Sign Up">
  </form>

  <p>Already signed up? <a href="/session/new">Sign in!</a></p>
  <p>Just want to browse around? <a href="/users/guest">Log in as guest!</a></p>
</div>
