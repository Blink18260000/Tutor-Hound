<div class="login-page" data-prefetch-url="http://res.cloudinary.com/dz9mezxg3/image/upload/w_1500/v1456774620/studying-1_vbhyfi.jpg">
  <div class="login-container">

    <div class="logo-container">
      <div class="login-logo logo logo-first">Tutor</div>
      <div class="login-logo logo logo-second">Hound</div>
    </div>

    <div class="error-container">
      <%= render "shared/errors" %>
    </div>

    <div class="login-form-container">
      <form action="<%= users_url %>" method="post">
        <%= auth_token %>

        <label for="user[user_name]">User Name:</label>
        <input type="text" name="user[user_name]" value="<%= @user.user_name %>"><br/>

        <label for="user[password]">Password:</label>
        <input type="password" name="user[password]" value=""><br/>

        <label for="user[phone_number]">Primary Phone Number:</label>
        <input type="text" name="user[phone_number]" value="xxx-xxx-xxxx"><br/>

        <label for="user[address]">Address:</label>
        <input type="text" name="user[address]" value=""><br/>

        <label for="user[region_id]">City:</label>
        <select class="dropdown" name="user[region_id]">
          <% Region.order("name").each do |region| %>
            <option value=<%= region.id %>><%= region.name %></option>
          <% end %>
        <select>
        <br/>
        <br/>

        <input class="dark-blue-button" type="submit" value="Create account">
      </form>
    </div>


    <div class="secondary-option" >
      <p>Already signed up? <a class="link" href="/session/new">Sign in!</a></p>
    </div>
    <div class="secondary-option" >
      <p>Just want to browse around? <a class="link" href="/users/guest">Log in as guest!</a></p>
    </div>
  </div>
</div>
